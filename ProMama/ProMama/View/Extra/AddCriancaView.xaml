<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProMama.View.Extra.AddCriancaView"
             Title="Adicionar criança">
    <ContentPage.Content>
        <StackLayout>
            <ScrollView>
                <StackLayout Spacing="20"
                             Padding="20">
                    <Entry Placeholder="Nome da criança" />
                    <Picker Title="Sexo da criança">
                        <Picker.Items>
                            <x:String>Masculino</x:String>
                            <x:String>Feminino</x:String>
                        </Picker.Items>
                    </Picker>
                    <Label Text="Selecione a data de nascimento da criança:" 
                           HorizontalOptions="Center"/>
                    <DatePicker Format="dd/MM/yyyy"
                                HorizontalOptions="Center" />
                    <Button Style="{StaticResource buttonMain}"
                            Text="Continuar"
                            Command="{Binding NavigationCommand}"/>
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>