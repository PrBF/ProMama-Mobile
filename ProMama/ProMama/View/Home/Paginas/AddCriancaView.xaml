<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProMama.View.Home.Paginas.AddCriancaView"
             Title="Adicionar criança">
    <ContentPage.Content>
        <StackLayout>
            <ScrollView>
                <StackLayout Spacing="20"
                             Padding="20">
                    <Entry Placeholder="Primeiro nome da criança"
                           Text="{Binding PrimeiroNome}"/>
                    <Label Text="Selecione a data de nascimento da criança:" 
                           HorizontalOptions="Center"/>
                    <DatePicker Format="dd/MM/yyyy"
                                HorizontalOptions="Center"
                                MinimumDate="{Binding MinimumDate}"
                                MaximumDate="{Binding MaximumDate}"
                                Date="{Binding CurrentDate}"
                                x:Name="DatePicker"/>
                    <Button Style="{StaticResource buttonMain}"
                            Text="Começar"
                            Command="{Binding AddCriancaCommand}"/>
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>