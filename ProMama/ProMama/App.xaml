<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProMama.App">
	<Application.Resources>

        <ResourceDictionary>

            <Style x:Key="buttonMain" TargetType="Button">
                <Setter Property="HorizontalOptions" Value="Fill" />
                <Setter Property="BackgroundColor" Value="#E53935" />
                <Setter Property="TextColor" Value="White" />
            </Style>

            <Style x:Key="buttonFacebook" TargetType="Button">
                <Setter Property="HorizontalOptions" Value="Fill" />
                <Setter Property="BackgroundColor" Value="#3b5998" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="Text" Value="Entrar com Facebook" />
            </Style>

            <Style x:Key="labelTitle" TargetType="Label">
                <Setter Property="TextColor" Value="#212121" />
            </Style>

            <Style x:Key="labelSubtitle" TargetType="Label">
                <Setter Property="TextColor" Value="#757575" />
            </Style>

        </ResourceDictionary>

    </Application.Resources>
</Application>