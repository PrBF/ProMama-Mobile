<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProMama.Views.Home.Paginas.FaleConoscoView"
             x:Name="this"
             Title="Minhas dúvidas">
    <ContentPage.Content>
        <StackLayout>
            <ListView
                SeparatorVisibility="None"
                HasUnevenRows="true"
                ItemsSource="{Binding Conversas}">
                <ListView.Header>
                    <StackLayout>
                        <StackLayout
                            Padding="20"
                            BackgroundColor="#F44336">
                            <Button 
                                Style="{StaticResource ClearButton}"
                                Text="Ver dúvidas já respondidas"
                                Command="{Binding OutrasConversasCommand}"/>
                        </StackLayout>
                        <StackLayout
                            Padding="20"
                            Spacing="20">
                            <Label
                                Text="Envie sua dúvida para nós respondermos!"
                                HorizontalOptions="CenterAndExpand"/>
                            <Frame Padding="5">
                                <Editor
                                    HeightRequest = "85"
                                    BackgroundColor="White"
                                    Text="{Binding ConversaTexto}"/>
                            </Frame>
                            <Button 
                                Style="{StaticResource MainButton}"
                                Text="Enviar dúvida"
                                Command="{Binding EnviarConversaCommand}"/>
                        </StackLayout>
                        <StackLayout 
                            Padding="20"
                            IsVisible="{Binding AvisoListaVazia}">
                            <Label 
                                Text="Não há nenhuma dúvida para ser mostrada."
                                HorizontalOptions="Center"
                                IsVisible="{Binding AvisoListaVazia}"/>
                        </StackLayout>
                        <StackLayout
                            Padding="20"
                            IsVisible="{Binding LoadingVisibility}">
                            <ActivityIndicator
                                HorizontalOptions="Center"
                                IsVisible="{Binding LoadingVisibility}"
                                IsRunning="{Binding LoadingVisibility}"/>
                        </StackLayout>
                    </StackLayout>
                    
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame Margin="20, 10, 20, 10">
                                <StackLayout>
                                    <Label 
                                        Text="{Binding pergunta}"
                                        TextColor="#262626"
                                        FontSize="Medium"/>
                                    <Label
                                        Text="{Binding resumo}"
                                        FontSize="Small"/>
                                </StackLayout>
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer 
                                        Command="{Binding Source={x:Reference this}, Path=BindingContext.AbrirConversaCommand}"
                                        CommandParameter="{Binding .}"/>
                                </Frame.GestureRecognizers>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>