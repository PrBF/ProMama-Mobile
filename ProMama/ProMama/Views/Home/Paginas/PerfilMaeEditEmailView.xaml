<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProMama.Views.Home.Paginas.PerfilMaeEditEmailView"
             Title="Trocar E-mail">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout 
                Padding="20"
                Spacing="20">
                <Entry
                    Placeholder="Novo e-mail"
                    Text="{Binding NovoEmail}"
                    Keyboard="Email"
                    Grid.Row="0"
                    Grid.Column="1"/>

                <Button 
                    Style="{StaticResource MainButton}"
                    Text="Salvar"
                    Command="{Binding SalvarCommand}"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>